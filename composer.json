{
  "name": "fond-of-spryker/simple-router",
  "description": "Redirects and add locale in url if missing.",
  "license": "MIT",
  "authors": [
    {
      "name": "Julian Zimmermann",
      "email": "julian@jzit.de"
    }
  ],
  "require": {
    "php": ">=7.3",
    "jaybizzle/crawler-detect": "1.2.64",
    "sinergi/browser-detector": "^6.1.2",
    "spryker/session": "^2.0.0 || 3.0.0 || 4.0.0",
    "spryker/store": "^1.4.0",
    "spryker/event-dispatcher": "^1.0.0",
    "spryker/router": "^1.0.0"
  },
  "require-dev": {
    "fond-of-codeception/spryker": "dev-feature/php8 as 1.0.0",
    "spryker/code-sniffer": "^0.17.14",
    "codeception/codeception": "^2.0.0 || ^3.0.0 || ^4.0.0 || ^5.0.0",
    "mikey179/vfsstream": "^1.6",
    "sebastian/phpcpd": "^4.1 || ^5.0 || ^6.0",
    "php-coveralls/php-coveralls": "^2.0",
    "spryker-sdk/phpstan-spryker": "*"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "FondOfSpryker\\": "src/FondOfSpryker/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "FondOfSpryker\\": "tests/FondOfSpryker/"
    }
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "phpro/grumphp": true
    }
  }
}
